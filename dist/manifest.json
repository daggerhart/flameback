{
    "manifest_version": 2,
    "name": "Woodpecker",
    "version": "1.0",
    "description": "Pecking away at back web design, such as removing onpaste events from elements.",
    "icons": {
        "48": "icons/woodpecker-48.png",
        "96": "icons/woodpecker-96.png"
    },
    "browser_action": {
        "default_icon": {
          "19": "icons/woodpecker-19.png",
          "38": "icons/woodpecker-38.png"
        },
        "default_title": "Woodpecker"
    },
    "background": {
        "scripts": ["js/background-button.js"]
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["js/content.js"]
        }
    ]
}
